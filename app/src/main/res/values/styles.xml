<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/black_semi_transparent</item>
        <item name="sv_showcaseColor">@color/orange</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetail</item>
        <item name="sv_buttonBackgroundColor">@color/orange</item>
        <item name="sv_buttonForegroundColor">@color/orange</item>

    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="CustomDetail" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">@color/white</item>
    </style>

    <dimen name="showcase_radius">20dp</dimen>
    <dimen name="showcase_radius_inner">26dp</dimen>
    <dimen name="showcase_radius_outer">40dp</dimen>
</resources>
